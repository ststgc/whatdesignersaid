# Global coding styles
# To learn more about .editorconfig see the links below.
# - editorconfig.org (en)
# - http://dev.hageee.net/21 (ja)

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.coffee]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

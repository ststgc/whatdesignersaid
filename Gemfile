# If middleman doesn‘t run right, try below
# - “bundle clear --force” and “bundle install” to reflesh required gems.
# - Make sure your rvm is right one to use for your project.
# ...will add more workaround.

# If you have OpenSSL installed, we recommend updating
# the following line to use "https"
source 'https://rubygems.org'

gem "middleman", "~> 3.3.3"
gem "middleman-blog", "~> 3.5.1"
gem 'middleman-gh-pages'
# gem 'middleman-thumbnailer', :git => 'git://github.com/nhemsley/middleman-thumbnailer.git'

# For feed.xml.builder
gem "builder"

# Other gems
gem 'oj'

# Comment out if you are using "middleman-blog" gem
# https://github.com/middleman/middleman/pull/599
# gem 'tzinfo'


# Use redcarpet for github like markdown
gem "kramdown"

# Use slim
gem "slim"

# Use susy
gem "susy"

# Use latest version of SASS
# gem "sass", "~> 3.3"

# Minify HTML
gem "middleman-minify-html"

# Syntx highlighting
gem "middleman-syntax"

# Imageoptim
gem "middleman-imageoptim"

# Favicon maker
gem "middleman-favicon-maker"

# Livereload
gem "middleman-livereload", "~> 3.1.0"

# For HTML parsing
gem "nokogiri"

# Used for publishing to Github Pages
gem 'middleman-deploy'

# Autoprefixer
gem 'middleman-autoprefixer'

